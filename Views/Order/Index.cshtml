@model List<Order>

<h2 class="text-3xl font-bold mb-6 text-center"> All Orders</h2>
<a asp-action="Create"  class="btn btn-sm btn-primary mb-4 mt-5">Crete New Order</a>

<div class="grid gap-4">
    @foreach (var order in Model)
    {
        <div class="p-4 rounded shadow bg-white border">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Order #@order.Id - <span class="badge bg-secondary">@order.Type</span></h5>
                <span class="fw-bold">$@order.Total</span>
            </div>
            <p class="mb-1"><strong>Customer:</strong> @order.CustomerName</p>
            <p class="mb-2"><strong>Status:</strong> <span class="badge bg-warning">@order.Status</span></p>

            <div class="d-flex gap-2">
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">View</a>
                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
            </div>
        </div>
    }
</div>
